<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presntation.fragment.HomeFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/graphic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="532dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="18sp"
                android:text="@string/sunday_19_may_2019_4_30pm"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/botom_osh"
                android:text="@string/mumbai_india"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="62dp"
                android:layout_height="76dp"
                android:layout_marginTop="72dp"
                android:fontFamily="@font/barlow_light"
                android:gravity="center"
                android:text="@string/_33"
                android:textSize="48sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:text="@string/c"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/_13_sunny"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="50dp"
                android:layout_height="22dp"
                android:text="Sunny"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/tv_35c"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:text="35°C"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/tv_27C"
                android:layout_width="34dp"
                android:layout_height="20dp"
                android:text="27°C"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="54dp"
                android:background="@drawable/_50_barometer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="68dp"
                android:layout_height="22dp"
                android:text="1,007mBar"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img2"
                app:layout_constraintStart_toStartOf="@+id/img2"
                app:layout_constraintTop_toBottomOf="@+id/img2" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/_27_humidity"
                app:layout_constraintEnd_toStartOf="@+id/img2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img2" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="45dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:text="49%"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img3"
                app:layout_constraintStart_toStartOf="@+id/img3"
                app:layout_constraintTop_toBottomOf="@+id/img3" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/_01_wind_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img2"
                app:layout_constraintTop_toTopOf="@+id/img2" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="54dp"
                android:layout_height="22dp"
                android:text="23 km/h"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img4"
                app:layout_constraintStart_toStartOf="@+id/img4"
                app:layout_constraintTop_toBottomOf="@+id/img4" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/_07_sunset"
                app:layout_constraintEnd_toStartOf="@+id/img6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/img6" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="54dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:text="6:03AM"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img5"
                app:layout_constraintStart_toStartOf="@+id/img5"
                app:layout_constraintTop_toBottomOf="@+id/img5" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginTop="58dp"
                android:background="@drawable/_08_sunrise"
                app:layout_constraintEnd_toEndOf="@+id/textView6"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:gravity="center"
                android:text="7:05 PM"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img6"
                app:layout_constraintStart_toStartOf="@+id/img6"
                app:layout_constraintTop_toBottomOf="@+id/img6" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/sand_clock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img6"
                app:layout_constraintTop_toTopOf="@+id/img6" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="60dp"
                android:layout_height="22dp"
                android:text="13h 1m"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/img7"
                app:layout_constraintStart_toStartOf="@+id/img7"
                app:layout_constraintTop_toBottomOf="@+id/img7" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_home" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
